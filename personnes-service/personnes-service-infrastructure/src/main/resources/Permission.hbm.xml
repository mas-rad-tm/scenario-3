<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

    <class name="ch.globaz.tmmas.personnesservice.infrastructure.security.Permission" table="permission" schema="personnes" mutable="true">

        <id name="id" column="id">
            <generator class="org.hibernate.id.IdentityGenerator"/>
        </id>


        <property name="typePermission" column="name">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ch.globaz.tmmas.personnesservice.infrastructure.security.TypePermission</param>
                <param name="useNamed">true</param>
            </type>
        </property>


        <set name="roles" table="permissions_roles" schema="personnes"
             lazy="false" fetch="select" cascade="all" >
            <key>
                <column name="permission_id" not-null="true" />
            </key>
            <many-to-many entity-name="ch.globaz.tmmas.personnesservice.infrastructure.security.Role">
                <column name="role_id" not-null="true" />
            </many-to-many>
        </set>




    </class>

</hibernate-mapping>